<view class="fixed pin flex items-center justify-center" style="background: {{background}}">
  <e-loader type="{{type}}" loading="{{loading}}" loadingText="{{loadingText}}"/>
  <view a:if="{{logo && corp}}" class="absolute pin-b flex flex-col items-center">
    <image a:if="{{logo}}" class="w-12 mb-2" mode="widthFix" src="{{logo}}"/>
    <text a:if="{{corp}}" class="mb-2 color-label text-xs">{{corp}}</text>
  </view>
</view>