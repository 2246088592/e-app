.card-wrapper {
	position: relative;
	overflow: hidden;
	padding: 16rpx;
	border-radius: 16rpx;
	background-color: #fff;
}

.rt-btn-wrapper {
	position: absolute;
	top: -48rpx;
	right: -48rpx;
	display: flex;
	background-color: #108ee9;
	transform: rotateZ(-45deg);
	align-items: center;
}

.rt-btn-active {
	background: #D9D9D9;
}
