.loader-wrapper {
	display: flex;
	width: 100%;
	flex-direction: column;
	align-items: center;
	justify-content: center;
}

.noData {
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	height: 100%;
}

.loader-wrapper>.load-text {
	margin: 16rpx 0;
	color: rgba(0,0,0,.25);
	font-style: italic;
	font-size: 32rpx;
}
