.sublist, .item {
  position: relative;
}

.sublist:after, .sublist>.item-wrapper>.item:after {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  display: block;
  height: 1px;
  background-color: rgba(0, 0, 0, .1);
  content: '';
  transform: scaley(.5);
}

.sublist>.item-wrapper>.item {
  display: flex;
  padding: 16rpx 16rpx 16rpx 32rpx;
  justify-content: space-between;
  align-items: center;
  background-color: #f7f7f7;
}

.sublist>.btn-add {
  height: 80rpx;
}