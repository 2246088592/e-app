<view class="input-wrapper">
  <view class="label" hidden="{{!model.label}}">
    <view class="necessary center" style="visibility: {{model.necessary ? 'visible' : 'hidden'}};">*</view>
    <text style="flex: 1;">{{model.label}}{{model.options.showValue ? (model.value || 0) + model.options.unit : ''}}</text>
  </view>
  <slider onChange="handleChange" class="slider" value="{{model.value || 0}}" trackSize="4" handleSize="20" step="{{model.options.step}}" min="{{model.options.min}}" max="{{model.options.max}}" activeColor="{{model.options.activeColor}}" backgroundColor="{{model.options.backgroundColor}}" handleColor="{{model.options.handleColor}}" disabled="{{model.disabled}}"/>
</view>
</view>